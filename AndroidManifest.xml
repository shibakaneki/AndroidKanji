<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ch.shibastudio.kanjinotepad"
    android:versionCode="1"
    android:versionName="1.0" android:installLocation="preferExternal">

    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="15"/>
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	
    <application
        android:icon="@drawable/knotepad"
        android:label="@string/app_name" android:debuggable="true"
        android:theme="@android:style/Theme.NoTitleBar">
        <activity android:name="ch.shibastudio.kanjinotepad.SplashActivity">
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="ch.shibastudio.kanjinotepad.KNotepadTabletActivity"></activity>
        <activity android:name="ch.shibastudio.kanjinotepad.KNotepadPhoneActivity"></activity>
        
        
    </application>

</manifest>